<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundGray"
    tools:context=".AddEntryActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">


        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewGraph"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginBottom="10dp"
            android:elevation="10dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@color/colorBackgroundWhite">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/entryTitle"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:text="Eintrag anlegen"
                    android:textSize="35sp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/colorTextGray"/>


                    <LinearLayout
                        android:id="@+id/linearLayoutBezeichnung"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        app:layout_constraintTop_toBottomOf="@+id/entryTitle"
                        tools:layout_editor_absoluteX="16dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintHorizontal_bias="0.129"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.091">

                        <TextView
                            android:id="@+id/textViewBezeichnung"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bezeichnung:"
                            android:textSize="20dp"
                            android:layout_marginStart="15dp"
                            android:textColor="@color/colorTextGray"/>

                        <EditText
                            android:id="@+id/Bezeichnung"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:ems="10"
                            android:hint="Titel"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:layout_editor_absoluteX="16dp"
                            android:textColor="@color/colorTextLightGray"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearLayoutMonthSelect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        app:layout_constraintHorizontal_bias="0.129"
                        app:layout_constraintVertical_bias="0.091"
                        app:layout_constraintTop_toBottomOf="@+id/linearLayoutBezeichnung"
                        tools:layout_editor_absoluteX="16dp"
                        tools:ignore="MissingConstraints">

                        <TextView
                            android:id="@+id/textViewValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Wert:"
                            android:textSize="20dp"
                            android:layout_marginStart="15dp"
                            app:layout_constraintTop_toBottomOf="@+id/textView"
                            android:textColor="@color/colorTextGray"/>

                        <EditText
                            android:id="@+id/editTextNumberDecimal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="92dp"
                            android:ems="3"
                            android:hint="00,00"
                            android:inputType="numberDecimal"
                            app:layout_constraintStart_toEndOf="@+id/textViewValue"
                            tools:layout_editor_absoluteY="85dp"
                            android:textColor="@color/colorTextLightGray"/>

                        <TextView
                            android:id="@+id/textViewEuro"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â‚¬"
                            android:textSize="20dp"
                            app:layout_constraintTop_toBottomOf="@+id/textView" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearLayoutDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        app:layout_constraintTop_toBottomOf="@+id/linearLayoutMonthSelect"
                        tools:layout_editor_absoluteX="16dp">


                        <TextView
                            android:id="@+id/textViewCurrency"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Datum:"
                            android:textSize="20dp"
                            app:layout_constraintTop_toBottomOf="@+id/textViewValue"
                            tools:layout_editor_absoluteX="55dp"
                            android:layout_marginStart="15dp"
                            android:textColor="@color/colorTextGray"/>

                        <TextView
                            android:id="@+id/editTextDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="72dp"
                            android:ems="5"
                            android:textSize="20dp"
                            android:text="01.01.2000"
                            android:inputType="date"
                            android:textColor="@color/colorTextLightGray"/>

                        <ImageView
                            android:id="@+id/calenderView"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginStart="1dp"
                            app:srcCompat="@drawable/ic_baseline_event" />
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/linearLayoutCycle"
                        android:layout_width="325dp"
                        android:layout_height="53dp"
                        android:layout_marginTop="15dp"

                        app:layout_constraintTop_toBottomOf="@+id/linearLayoutDate"
                        tools:layout_editor_absoluteX="16dp">

                        <TextView
                            android:id="@+id/textViewCycle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20dp"
                            android:text="Wiederholung :"
                            android:layout_marginStart="15dp"
                            android:textColor="@color/colorTextGray"/>


                        <Spinner
                            android:id="@+id/spinnerCycle"
                            android:layout_width="match_parent"
                            android:textSize="20dp"
                            android:layout_height="match_parent"
                            android:textColor="@color/colorTextLightGray"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearLayoutCategory"
                        android:layout_width="325dp"
                        android:layout_height="53dp"
                        android:layout_marginTop="15dp"
                        app:layout_constraintTop_toBottomOf="@+id/linearLayoutCycle"
                        tools:layout_editor_absoluteX="16dp">

                        <TextView
                            android:id="@+id/textViewCategory"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:textSize="20dp"
                            android:text="Kategorie :"
                            android:layout_marginStart="15dp"
                            android:textColor="@color/colorTextGray"/>


                        <Spinner
                            android:id="@+id/spinnerCategory"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@color/colorTextLightGray"/>

                    </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="90dp"
                    android:weightSum="2"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayoutCategory"
                    tools:layout_editor_absoluteX="16dp">

                    <Button
                        android:id="@+id/buttonOk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:backgroundTint="@color/colorEinnahmen"
                        android:onClick="onClickOk"
                        android:text="Ok"
                        android:textColor="@color/colorTextGray" />

                    <Button
                        android:id="@+id/buttonCancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="50dp"
                        android:backgroundTint="@color/colorSonstiges"
                        android:onClick="onClickCancel"
                        android:text="Abbrechen"
                        android:textColor="@color/colorTextGray" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>