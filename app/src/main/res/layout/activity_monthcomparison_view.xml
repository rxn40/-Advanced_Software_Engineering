<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundGray"
    tools:context=".MonthComparisonViewActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewGraph"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginBottom="10dp"
            android:elevation="10dp"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="4">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:text="Monatsvergleich"
                    android:textSize="35sp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/colorTextGray"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/linearM1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                            tools:layout_editor_absoluteX="16dp">


                            <TextView
                                android:id="@+id/textM1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Monat 1:"
                                android:textSize="18dp"
                                app:layout_constraintTop_toBottomOf="@+id/textViewValue"
                                tools:layout_editor_absoluteX="55dp"
                                android:layout_marginStart="5dp"
                                android:textStyle="bold"
                                android:textColor="@color/colorTextLightGray"/>

                            <TextView
                                android:id="@+id/editTextDateM1"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:ems="10"
                                android:textSize="18dp"
                                android:inputType="date"
                                android:text="01.01.2000"
                                android:textStyle="bold"
                                android:textColor="@color/colorTextLightGray"/>


                            <ImageView
                                android:id="@+id/calenderViewM1"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_marginStart="5dp"
                                android:onClick="openCalenderM1"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.818"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_bias="0.101"
                                app:srcCompat="@drawable/ic_baseline_event" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linearM2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                            tools:layout_editor_absoluteX="16dp">


                            <TextView
                                android:id="@+id/textM2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Monat 2:"
                                android:textSize="18dp"
                                app:layout_constraintTop_toBottomOf="@+id/textViewValue"
                                tools:layout_editor_absoluteX="55dp"
                                android:layout_marginStart="5dp"
                                android:textStyle="bold"
                                android:textColor="@color/colorTextLightGray"/>

                            <TextView
                                android:id="@+id/editTextDateM2"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:ems="10"
                                android:textSize="18dp"
                                android:inputType="date"
                                android:text="01.01.2000"
                                android:textStyle="bold"
                                android:textColor="@color/colorTextLightGray"/>


                            <ImageView
                                android:id="@+id/calenderViewM2"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_marginStart="5dp"
                                android:onClick="openCalenderM2"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.818"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_bias="0.101"
                                app:srcCompat="@drawable/ic_baseline_event" />
                        </LinearLayout>

                    </LinearLayout>

                    <Button
                        android:id="@+id/changeMonth"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        android:onClick="changeMonth"
                        android:text="Laden"
                        android:backgroundTint="@color/colorButton"
                        android:textColor="@color/colorTextGray"/>
                </LinearLayout>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        >


                        <org.eazegraph.lib.charts.BarChart
                            android:id="@+id/barChartInOut"
                            android:layout_width="300dp"
                            android:layout_height="300dp"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="15dp"
                            android:padding="6dp" />
                    </LinearLayout>
                </HorizontalScrollView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginLeft="30dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_gravity="center_vertical">

                        <View
                            android:layout_width="25dp"
                            android:layout_height="match_parent"
                            android:background="@color/colorEinnahmen" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp"
                            android:text="@string/Kat_Einnahmen"
                            android:textSize="18sp"
                            android:textColor="@color/colorTextLightGray"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="5dp">

                        <View
                            android:layout_width="25dp"
                            android:layout_height="match_parent"
                            android:background="@color/colorAusgaben" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp"
                            android:text="@string/Kat_Ausgaben"
                            android:textSize="18sp"
                            android:textColor="@color/colorTextLightGray"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="30dp"
                        android:text="Monatsvergleich Einnahmen"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorTextGray"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="20dp"
                        android:background="@color/colorEggshell" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="25dp"
                        android:layout_marginBottom="2dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-light"
                            android:id="@+id/tvMonth1in"
                            android:text="0"
                            android:textSize="20sp"
                            android:textColor="@color/colorTextLightGray"/>

                        <TextView
                            android:id="@+id/tvin_Month1"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:fontFamily="sans-serif-light"
                            android:text="0"
                            android:textAlignment="textEnd"
                            android:textColor="@color/colorEinnahmen"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@color/colorEggshell" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="25dp"
                        android:layout_marginBottom="2dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-light"
                            android:id="@+id/tvMonth2in"
                            android:text="0"
                            android:textSize="20sp"
                            android:textColor="@color/colorTextLightGray"/>

                        <TextView
                            android:id="@+id/tvin_Month2"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:fontFamily="sans-serif-light"
                            android:text="0"
                            android:textAlignment="textEnd"
                            android:textColor="@color/colorEinnahmen"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@color/colorEggshell" />

                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginBottom="50dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="30dp"
                        android:text="Monatsvergleich Ausgaben"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorTextGray"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="20dp"
                        android:background="@color/colorEggshell" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="25dp"
                        android:layout_marginBottom="2dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-light"
                            android:id="@+id/tvMonth1"
                            android:text="0"
                            android:textSize="20sp"
                            android:textColor="@color/colorTextLightGray"/>

                        <TextView
                            android:id="@+id/tvout_Month1"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:fontFamily="sans-serif-light"
                            android:text="0"
                            android:textAlignment="textEnd"
                            android:textColor="@color/colorAusgaben"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@color/colorEggshell" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="25dp"
                        android:layout_marginBottom="2dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-light"
                            android:id="@+id/tvMonth2"
                            android:text="0"
                            android:textSize="20sp"
                            android:textColor="@color/colorTextLightGray"/>

                        <TextView
                            android:id="@+id/tvout_Month2"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:fontFamily="sans-serif-light"
                            android:text="0"
                            android:textAlignment="textEnd"
                            android:textColor="@color/colorAusgaben"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@color/colorEggshell" />

                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </ScrollView>
</RelativeLayout>