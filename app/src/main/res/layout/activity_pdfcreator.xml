<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PDFCreatorActivity">

    <Button
        android:id="@+id/createPdfButton"
        android:layout_width="155dp"
        android:layout_height="76dp"
        android:onClick="createPDF"
        android:text="Create PDF"
        app:layout_constraintBottom_toTopOf="@+id/viewPdfButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.943" />

    <Button
        android:id="@+id/viewPdfButton"
        android:layout_width="155dp"
        android:layout_height="69dp"
        android:layout_marginBottom="92dp"
        android:onClick="showPDF"
        android:text="Show PDF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>