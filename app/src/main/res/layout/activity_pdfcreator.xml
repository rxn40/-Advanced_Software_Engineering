<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundGray"
    tools:context=".PDFCreatorActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewGraph"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginBottom="10dp"
            android:elevation="10dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@color/colorBackgroundWhite">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:text="PDF generieren"
                    android:textSize="35sp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/colorTextGray"/>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="Selektiertes Startdatum:"
                        android:textSize="20sp"
                        android:layout_marginStart="20dp"
                        android:layout_marginBottom="20dp"
                        android:textColor="@color/colorTextGray"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/selectView"
                        android:layout_width="180dp"
                        android:layout_height="50dp"
                        android:textSize="26sp"
                        android:text="Selected Date"
                        android:layout_marginStart="20dp"
                        android:textColor="@color/colorTextGray"/>

                    <ImageView
                        android:id="@+id/calenderView"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="80dp"
                        app:srcCompat="@drawable/ic_baseline_event" />

            </LinearLayout>

                <Button
                        android:id="@+id/createPdfButton"
                        android:layout_width="155dp"
                        android:layout_height="70dp"
                        android:backgroundTint="@color/colorButton"
                        android:text="PDF generieren"
                        android:layout_marginTop="100dp"
                        android:textColor="@color/colorTextGray"
                        android:layout_gravity="center"/>

                    <Button
                        android:id="@+id/viewPdfButton"
                        android:layout_width="155dp"
                        android:layout_height="70dp"
                        android:text="PDF anzeigen"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="120dp"
                        android:backgroundTint="@color/colorButton"
                        android:textColor="@color/colorTextGray"
                        android:layout_gravity="center"/>
                </LinearLayout>
        </androidx.cardview.widget.CardView>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>